---
import Layout from "../layouts/Layout.astro";
import img from "../assets/img/2620251.jpg";
import img2 from "../assets/img/2620252.jpg";
import oddie from "../assets/img/oddie.jpg";
import blube from "../assets/img/blube.jpg";
---

<Layout
	title="Gato persa europeo - Ágatha gatos persa"
	description="Conoce al encantador Gato Persa Europeo, una raza conocida por su belleza y carácter dulce. Descubre más sobre esta maravillosa raza en nuestro criadero."
>
	<main class="bg-[#f1eeee] text-[#2E2E2E] min-h-screen pb-30">
		<div class="bg-[#FF6B6B] h-40 mt-30 flex items-center justify-center">
			<h1 class="text-[30px] font-bold text-white">Gato persa europeo</h1>
		</div>

		<section class="max-w-[800px] mx-auto px-4 py-10 mt-10 flex flex-col sm:flex-row gap-12 justify-center items-center">
			<figure class="text-center">
				<h2 class="text-2xl sm:text-3xl font-bold mb-2">Padre</h2>
				<img src={oddie.src} alt="Padre gato persa europeo" loading="lazy" class="border-3 p-2 h-75 w-75 object-cover rounded-lg" />
			</figure>
			<figure class="text-center">
				<h2 class="text-2xl sm:text-3xl font-bold mb-2">Madre</h2>
				<img src={blube.src} alt="Madre gato persa europeo" loading="lazy" class="border-3 p-2 h-75 w-75 object-cover rounded-lg" />
			</figure>
		</section>

		<article class="mt-20 px-4 flex flex-col md:flex-row justify-center items-center gap-12 lg:gap-20">
			<img src={img.src} alt="Gatito persa europeo Orion" loading="lazy" class="border-3 p-2 w-80 h-auto lg:w-96 object-cover rounded-lg" />
			<div class="flex flex-col text-left text-lg lg:text-xl">
				<p><strong>Raza:</strong> Persa Europeo</p>
				<p><strong>Nombre:</strong> Orion</p>
				<p><strong>Género:</strong> Masculino</p>
				<p><strong>Edad:</strong> 01 Semana (26/05/2025)</p>
				<div class="flex gap-4 mt-6">
					<a href="/contacto" class="text-sm sm:text-base inline-block hover:bg-[#FF6B6B] border-2 border-[#FF6B6B] text-[#FF6B6B] hover:text-white font-semibold py-2 px-4 rounded-full transition duration-300 shadow">
						Adoptar gatito
					</a>
					<a href="/gatosDisponibles" class="text-sm sm:text-base inline-block bg-[#FF6B6B] hover:bg-[#e65c5c] text-white font-semibold py-2 px-4 rounded-full transition duration-300 shadow">
						Ver gatos disponibles
					</a>
				</div>
			</div>
		</article>

		<article class="mt-20 px-4 flex flex-col md:flex-row justify-center items-center gap-12 lg:gap-20">
			<img src={img2.src} alt="Gatito persa europeo Sirius" loading="lazy" class="border-3 p-2 w-80 h-auto lg:w-96 object-cover rounded-lg" />
			<div class="flex flex-col text-left text-lg lg:text-xl">
				<p><strong>Raza:</strong> Persa Europeo</p>
				<p><strong>Nombre:</strong> Sirius</p>
				<p><strong>Género:</strong> Masculino</p>
				<p><strong>Edad:</strong> 01 Semana (26/05/2025)</p>
				<div class="flex gap-4 mt-6">
					<a href="/contacto" class="text-sm sm:text-base inline-block hover:bg-[#FF6B6B] border-2 border-[#FF6B6B] text-[#FF6B6B] hover:text-white font-semibold py-2 px-4 rounded-full transition duration-300 shadow">
						Adoptar gatito
					</a>
					<a href="/gatosDisponibles" class="text-sm sm:text-base inline-block bg-[#FF6B6B] hover:bg-[#e65c5c] text-white font-semibold py-2 px-4 rounded-full transition duration-300 shadow">
						Ver gatos disponibles
					</a>
				</div>
			</div>
		</article>
	</main>
</Layout>
