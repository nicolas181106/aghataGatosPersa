---
import Layout from "../../layouts/layout.astro";
import art1 from "./../../assets/img/comida/art1.jpg";
import art2 from "./../../assets/img/comida/art2.jpg";
import art3 from "./../../assets/img/comida/art3.jpg";
import art4 from "./../../assets/img/comida/art4.jpg";
import art5 from "./../../assets/img/comida/art5.jpg";
import art6 from "./../../assets/img/comida/art6.jpg";

const comida = [
  {
    a: "https://amzn.to/47iYthf",
    img: art1.src,
    alt: "Comida húmeda Ultima Fit & Delicious para gatos persas esterilizados con pescado del océano",
    h2: "Ultima Fit & Delicious Comida Húmeda para Gatos Esterilizados",
