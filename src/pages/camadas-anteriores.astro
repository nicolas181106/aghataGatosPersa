---
import Layout from "../layouts/layout.astro";
import oddie from "../assets/img/oddie.jpg";
import blube from "../assets/img/blube.jpg";
import ceres from "../assets/img/ceres.jpg";

import { gatosEuropeo } from "../scripts/gatos-europeo anterior.js";
import { gatosChinchilla } from "../scripts/gatos-chinchilla anterior.js";
import { gatosHimalayo } from "../scripts/gatos-himalayo.js";
---

<Layout
  title="Camadas Anteriores | Ágatha Gatos Persas"
  description="Descubre todas nuestras camadas anteriores de gatos persa europeo, chinchilla e himalayo."
  keywords="camadas anteriores gato persa, persa europeo, persa chinchilla, persa himalayo, Ágatha Gatos Persas"
>

  <nav class="flex justify-center items-center gap-6 py-6 bg-[#ff6b6bb4] text-white font-semibold mt-20 fixed top-0 z-1 shadow-lg w-full">
    <a href="#europeo" class="hover:underline text-center">Persa Europeo</a>
    <a href="#chinchilla" class="hover:underline text-center">Persa Chinchilla</a>
    <a href="#himalayo" class="hover:underline text-center">Persa Himalayo</a>
  </nav>

  <main class="min-h-screen pb-20 backdrop-blur-[5px] text-[#2E2E2E]">

    <section id="europeo">
      <div class="bg-[#FF6B6B] h-40 flex items-center justify-center max-[399px]:mt-44 mt-38">
        <h1 class="text-[30px] font-bold text-white text-center">Camada Persa Europeo</h1>
      </div>

      <section class="max-w-[800px] mx-auto px-4 py-10 mt-10 flex flex-col sm:flex-row gap-12 justify-center items-center pop">
        <figure class="text-center hover:scale-105 transition-all duration-300 ease-in-out hover:cursor-pointer" id="oddieImg">
          <h2 class="text-2xl sm:text-3xl font-bold mb-2">Padre</h2>
          <img src={oddie.src} alt="Padre gato persa europeo" loading="lazy" class="p-2 h-75 w-75 object-cover rounded-2xl bg-[#FF6B6B]"/>
        </figure>
        <figure class="text-center hover:scale-105 transition-all duration-300 ease-in-out hover:cursor-pointer" id="blubeImg">
          <h2 class="text-2xl sm:text-3xl font-bold mb-2">Madre</h2>
          <img src={blube.src} alt="Madre gato persa europeo" loading="lazy" class="p-2 h-75 w-75 object-cover rounded-2xl bg-[#FF6B6B]"/>
        </figure>
      </section>

      <div class="max-w-4xl mx-auto mt-10 text-center">
        <p class="text-xl md:text-2xl text-gray-700">
          Esta camada nació el <strong>26 de mayo</strong>.
        </p>
      </div>

      <section class="max-w-6xl mx-auto px-4 py-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          gatosEuropeo.map((europeo) => (
            <article class="bg-white/90 p-6 rounded-lg shadow-2xl flex flex-col items-center hover:scale-105 transition-transform duration-300">
              <img src={europeo.img} alt={europeo.alt} class="h-80 w-90 object-cover rounded-2xl bg-[#FF6B6B]" />
              <h2 class="mt-4 text-xl font-bold">{europeo.name}</h2>
              <p class="text-gray-700 mt-1"><strong>Género:</strong> {europeo.gender}</p>
              <p class="text-gray-700"><strong>Fecha de nacimiento:</strong> {europeo.birth}</p>
            </article>
          )
        )}
      </section>
    </section>

    <section id="chinchilla" class="py-16">
      <div class="bg-[#FF6B6B] h-40 flex items-center justify-center">
        <h1 class="text-[30px] font-bold text-white text-center">Camada Persa Chinchilla</h1>
      </div>

      <section class="max-w-[800px] mx-auto px-4 py-10 mt-10 flex flex-col sm:flex-row gap-12 justify-center items-center pop">
        <figure class="text-center hover:scale-105 transition-all duration-300 ease-in-out hover:cursor-pointer">
          <h2 class="text-2xl sm:text-3xl font-bold mb-2">Padre</h2>
          <img src={oddie.src} alt="Padre gato persa chinchilla" loading="lazy" class="p-2 h-75 w-75 object-cover rounded-2xl bg-[#FF6B6B]"/>
        </figure>
        <figure class="text-center hover:scale-105 transition-all duration-300 ease-in-out hover:cursor-pointer">
          <h2 class="text-2xl sm:text-3xl font-bold mb-2">Madre</h2>
          <img src={ceres.src} alt="Madre gato persa chinchilla" loading="lazy" class="p-2 h-75 w-75 object-cover rounded-2xl bg-[#FF6B6B]"/>
        </figure>
      </section>

      <div class="max-w-4xl mx-auto mt-10 text-center">
        <p class="text-xl md:text-2xl text-gray-700">
          Esta camada nació el <strong>22 de junio</strong>.
        </p>
      </div>

      <section class="max-w-6xl mx-auto px-4 py-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          gatosChinchilla.map((chinchilla) => (
            <article class="bg-white/90 p-6 rounded-lg shadow-2xl flex flex-col items-center hover:scale-105 transition-transform duration-300">
              <img src={chinchilla.img} alt={chinchilla.alt} class="h-80 w-90 object-cover rounded-2xl bg-[#FF6B6B]" />
              <h2 class="mt-4 text-xl font-bold">{chinchilla.name}</h2>
              <p class="text-gray-700 mt-1"><strong>Género:</strong> {chinchilla.gender}</p>
              <p class="text-gray-700"><strong>Fecha de nacimiento:</strong> {chinchilla.birth}</p>
            </article>
          )
        )}
    </section>


    <section id="himalayo" class="py-16">
      <div class="bg-[#FF6B6B] h-40 flex items-center justify-center">
        <h1 class="text-[30px] font-bold text-white text-center">Camada Persa Himalayo</h1>
      </div>

      <div class="max-w-4xl mx-auto mt-10 text-center">
        <p class="text-xl md:text-2xl text-gray-700">
          Por el momento, <strong>no se han registrado camadas</strong> de esta variedad.
        </p>
      </div>
    </section>

  </main>
</Layout>
