---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import logo from "../assets/img/logoAnimated.png";
import "../styles/global.css";

const { title } = Astro.props;
const { description } = Astro.props;
---

<!doctype html>
<html lang="es-ES">
	<head>
		<link rel="icon" type="image/svg+xml" href={logo.src} />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta
			name="keywords"
			content="gatos, persa, ágatha, criadero, gatos persa, gatos en adopción, gatos en venta, gatos en familia"
		/>
		<meta name="author" content="Nicolás Adrián Bernal Bermúdez" />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Balsamiq Sans", cursive;
	}
</style>
