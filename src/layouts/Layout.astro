---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="es-ES">
	<head>
		<link rel="icon" type="image/svg+xml" href=""/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width"/>
		<meta name="description" content="Ágatha gatos persa es un criadero de gatos persas."/>
		<meta name="keywords" content="gatos, persa, ágatha, criadero"/>
		<meta name="author" content="Nicolás Adrián Bernal Bermúdez"/>
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Balsamiq Sans', cursive;
	}
</style>
